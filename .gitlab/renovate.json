{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":prHourlyLimitNone",
    ":rebaseStalePrs",
	":preserveSemverRanges",
    ":label(renovate)"
  ],
   "packageRules": [
	{
      "enabled": false
    },
	{
	  "matchPackageNames": ["axios"],
	  "allowedVersions": "<=0.27"
	},
    {
      "matchPackageNames": ["vue-loader"],
      "allowedVersions": "<=15"
    },
	{
      "matchPackageNames": ["vue"],
      "allowedVersions": "<=2"
    },
	{
      "matchPackageNames": ["vuex"],
      "allowedVersions": "<=3"
    },
	{
      "matchPackageNames": ["vue-i18n"],
      "allowedVersions": "<=8"
	},
	{
      "matchPackageNames": ["@vue/test-utils"],
      "allowedVersions": "<=1"
    }
  ]
}
