{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":prHourlyLimitNone",
    ":rebaseStalePrs",
	":preserveSemverRanges",
    ":label(renovate)"
  ],
   "packageRules": [
    {
      "matchPackageNames": ["vue-loader"],
      "allowedVersions": "<=15"
    },
	{
      "matchPackageNames": ["vue"],
      "allowedVersions": "<=2"
    },
	{
      "matchPackageNames": ["vuex"],
      "allowedVersions": "<=3"
    },
	{
      "matchPackageNames": ["@vue/test-utils"],
      "allowedVersions": "<=1"
    }
  ]
}
